{
    "name": "@cashfreepayments/pg-react",
    "version": "1.0.2",
    "description": "Reusable React components for Cashfree PG",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "types": "dist/types/index.d.ts",
    "scripts": {
        "start": "vite",
        "dev": "vite",
        "build": "tsup src/index.ts --format esm,cjs --dts",
        "lib:dev": "tsup src/index.ts --watch --format esm,cjs --dts",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "type-check": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cashfree/pg-react.git"
    },
    "keywords": [
        "react",
        "cashfree",
        "payments",
        "components",
        "pg"
    ],
    "author": "Cashfree Payments <developers@cashfree.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/cashfree/pg-react/issues"
    },
    "homepage": "https://github.com/cashfree/pg-react#readme",
    "type": "module",
    "files": [
        "dist"
    ],
    "dependencies": {
        "@cashfreepayments/cashfree-js": "^1.0.5",
        "@reduxjs/toolkit": "^2.8.2",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-redux": "^9.2.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/jest": "^29.5.14",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "@types/react-redux": "^7.1.34",
        "@types/redux-mock-store": "^1.5.0",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitejs/plugin-react": "^4.4.1",
        "babel-jest": "^29.7.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.37.5",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "redux-mock-store": "^1.5.5",
        "ts-jest": "^29.3.3",
        "ts-node": "^10.9.2",
        "tsup": "^8.4.0",
        "typescript": "^5.8.3",
        "vite": "^6.3.5"
    }
}
